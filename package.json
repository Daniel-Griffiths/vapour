{
  "name": "vapour",
  "private": true,
  "version": "2.0.1",
  "author": "Daniel Griffiths <contact@danielgriffiths.dev>",
  "description": "An alternative open source Steam client",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build:dist": "tsc && vite build",
    "build:mac": "yarn build:dist && electron-builder --mac --publish never",
    "build:linux": "yarn build:dist && electron-builder --linux --publish never",
    "build:windows": "yarn build:dist && electron-builder --win --publish never",
    "build:all": "yarn build:dist && electron-builder --win --linux --mac --publish never",
    "build:flatpak": "electron-installer-flatpak --src release/2.0.1/linux-unpacked --dest release/ --arch x64 --config flatconf.json --verbose",
    "build:linuxdir": "yarn build:dist && electron-builder --linux --x64 --dir && echo '24.1.3' > release/2.0.1/linux-unpacked/version && echo 'WIP' > release/2.0.1/linux-unpacked/LICENSE",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0"
  },
  "dependencies": {
    "@noriginmedia/norigin-spatial-navigation": "^2.3.0",
    "electron-store": "^10.0.1",
    "gamepad.js": "^2.1.0",
    "lodash": "^4.17.21",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-intersection-observer": "^9.16.0",
    "react-router-dom": "^7.3.0",
    "styled-components": "^6.1.15",
    "yarn": "^1.22.22"
  },
  "devDependencies": {
    "@types/lodash": "^4.17.16",
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "@typescript-eslint/eslint-plugin": "^8.26.0",
    "@typescript-eslint/parser": "^8.26.0",
    "@vitejs/plugin-react": "^4.3.4",
    "electron": "^35.0.0",
    "electron-builder": "^25.1.8",
    "eslint": "^9.22.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-perfectionist": "^4.10.1",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "typescript": "^5.8.2",
    "vite": "^6.2.1",
    "vite-plugin-electron": "^0.29.0",
    "vite-plugin-electron-renderer": "^0.14.6"
  },
  "optionalDependencies": {
    "dmg-license": "^1.0.11"
  },
  "main": "dist-electron/main.js",
  "resolutions": {
    "styled-components": "^5"
  }
}
